<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:background="@drawable/message_sent_bg"
        android:backgroundTint="#2F2F2F"
        android:fontFamily="@font/montserrat_regular"
        android:padding="18dp"
        android:text="This is a sample message sent by the user"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_bot_message"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/message_response_bg"
        android:backgroundTint="#808080"
        android:fontFamily="@font/montserrat_regular"
        android:padding="18dp"
        android:text="This is a sample message sent by the bot"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="visible" />

</RelativeLayout>